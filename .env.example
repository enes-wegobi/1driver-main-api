# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=debug
LOGGING_FILE_ENABLED=true
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_ERROR_MAX_FILES=30d

# DataDog Configuration (Production)
DATADOG_ENABLED=false
DATADOG_API_KEY=your_datadog_api_key_here
DATADOG_SERVICE=1driver-main-api
DATADOG_ENV=development
DATADOG_VERSION=1.0.0
DATADOG_HOSTNAME=localhost
DATADOG_LOG_LEVEL=info
DATADOG_TAGS=team:backend,service:api-gateway

# JWT Configuration
JWT_SECRET=supersecret
JWT_EXPIRES_IN=36000

# Redis/Valkey Configuration
VALKEY_HOST=redis
VALKEY_PORT=6379
VALKEY_USERNAME=
VALKEY_PASSWORD=secure_redis_password
VALKEY_TLS=false

# Queue Redis Configuration
QUEUE_REDIS_HOST=redis
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_USERNAME=
QUEUE_REDIS_PASSWORD=secure_redis_password
QUEUE_REDIS_DB=1
QUEUE_REDIS_TLS=false

# Service URLs (Docker Compose)
USERS_SERVICE_URL=http://user-api:3001
AUTH_SERVICE_URL=http://user-api:3001
PROMOTION_SERVICE_URL=http://promotion-api:3002

# Service Timeouts and Retries
USERS_SERVICE_TIMEOUT=30000
USERS_SERVICE_RETRY_COUNT=3
USERS_SERVICE_RETRY_DELAY=1000
AUTH_SERVICE_TIMEOUT=5000
AUTH_SERVICE_RETRY_COUNT=3
AUTH_SERVICE_RETRY_DELAY=1000
PROMOTION_SERVICE_TIMEOUT=5000
PROMOTION_SERVICE_RETRY_COUNT=3
PROMOTION_SERVICE_RETRY_DELAY=1000

# Redis Expiry Settings
REDIS_DRIVER_LOCATION_EXPIRY=900
REDIS_ACTIVE_DRIVER_EXPIRY=1800
REDIS_ACTIVE_CUSTOMER_EXPIRY=1800

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# DigitalOcean Spaces (S3 Compatible)
SPACES_REGION=your_region
SPACES_ENDPOINT=your_endpoint
SPACES_ACCESS_KEY_ID=your_access_key
SPACES_SECRET_ACCESS_KEY=your_secret_key
SPACES_BUCKET_NAME=your_bucket_name
SPACES_CDN_ENDPOINT=your_cdn_endpoint

# Trip Configuration
TRIP_MONGODB_USER=your_trip_db_user
TRIP_MONGODB_URI=your_trip_db_uri
TRIP_MONGODB_PASSWORD=your_trip_db_password
TRIP_COST_PER_MINUTE=1
DRIVER_EARNINGS_PER_MINUTE=0.5
TRIP_DRIVER_RESPONSE_TIMEOUT=120
TRIP_TIMEOUT_CHECK_INTERVAL=30

# Queue Configuration
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50
QUEUE_DEFAULT_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000

# Default Retry Configuration
DEFAULT_RETRY_COUNT=3
DEFAULT_RETRY_DELAY=1000
