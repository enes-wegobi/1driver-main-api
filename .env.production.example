# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOGGING_FILE_ENABLED=true
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30d
LOG_ERROR_MAX_FILES=60d

# DataDog Configuration (Production)
DATADOG_ENABLED=true
DATADOG_API_KEY=your_production_datadog_api_key
DATADOG_SERVICE=1driver-main-api
DATADOG_ENV=production
DATADOG_VERSION=1.0.0
DATADOG_HOSTNAME=your-production-hostname
DATADOG_LOG_LEVEL=info
DATADOG_TAGS=team:backend,service:api-gateway,env:production

# APM Tracing (Optional)
DD_TRACE_ENABLED=true
DD_SERVICE=1driver-main-api
DD_ENV=production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=36000

# Redis/Valkey Configuration
VALKEY_HOST=your-redis-host
VALKEY_PORT=6379
VALKEY_USERNAME=your_redis_username
VALKEY_PASSWORD=your_secure_redis_password
VALKEY_TLS=true

# Queue Redis Configuration
QUEUE_REDIS_HOST=your-redis-host
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_USERNAME=your_redis_username
QUEUE_REDIS_PASSWORD=your_secure_redis_password
QUEUE_REDIS_DB=1
QUEUE_REDIS_TLS=true

# Service URLs (Production)
USERS_SERVICE_URL=http://user-api:3001
AUTH_SERVICE_URL=http://user-api:3001
PROMOTION_SERVICE_URL=http://promotion-api:3002

# Service Timeouts and Retries
USERS_SERVICE_TIMEOUT=30000
USERS_SERVICE_RETRY_COUNT=3
USERS_SERVICE_RETRY_DELAY=1000
AUTH_SERVICE_TIMEOUT=5000
AUTH_SERVICE_RETRY_COUNT=3
AUTH_SERVICE_RETRY_DELAY=1000
PROMOTION_SERVICE_TIMEOUT=5000
PROMOTION_SERVICE_RETRY_COUNT=3
PROMOTION_SERVICE_RETRY_DELAY=1000

# Redis Expiry Settings
REDIS_DRIVER_LOCATION_EXPIRY=900
REDIS_ACTIVE_DRIVER_EXPIRY=1800
REDIS_ACTIVE_CUSTOMER_EXPIRY=1800

# Google Maps
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# DigitalOcean Spaces (S3 Compatible)
SPACES_REGION=your_production_region
SPACES_ENDPOINT=your_production_endpoint
SPACES_ACCESS_KEY_ID=your_production_access_key
SPACES_SECRET_ACCESS_KEY=your_production_secret_key
SPACES_BUCKET_NAME=your_production_bucket_name
SPACES_CDN_ENDPOINT=your_production_cdn_endpoint

# Trip Configuration
TRIP_MONGODB_USER=your_production_trip_db_user
TRIP_MONGODB_URI=your_production_trip_db_uri
TRIP_MONGODB_PASSWORD=your_production_trip_db_password
TRIP_COST_PER_MINUTE=1
DRIVER_EARNINGS_PER_MINUTE=0.5
TRIP_DRIVER_RESPONSE_TIMEOUT=120
TRIP_TIMEOUT_CHECK_INTERVAL=30

# Queue Configuration
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50
QUEUE_DEFAULT_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000

# Default Retry Configuration
DEFAULT_RETRY_COUNT=3
DEFAULT_RETRY_DELAY=1000
